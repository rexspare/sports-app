{
  "name": "acheev-api",
  "version": "0.0.1",
  "private": true,
  "description": "Acheev API",
  "scripts": {
    "tsc": "tsc",
    "clean": "rm -rf dist/*",
    "lint": "eslint 'src/**/*.ts'",
    "dev": "NODE_ENV=development nodemon ./src/server.ts --verbose",
    "start-dev": "yarn generate-schema && node -r ts-node/register -r dotenv/config ./src/server.ts",
    "generate-migration": "dotenv -- knex migrate:make --knexfile knexfile.ts -x ts ",
    "migrate": "dotenv -- knex migrate:latest --knexfile knexfile.ts",
    "rollback": "dotenv -- knex migrate:rollback --knexfile knexfile.ts",
    "seed": "dotenv -- knex seed:run --knexfile knexfile.ts",
    "generate-schema": "mkdir -p ./dist/src/gqlTypes && awk 1 ./src/gqlTypes/*.graphql > ./dist/src/gqlTypes/schema.graphql",
    "build": "NODE_ENV=production tsc",
    "start": "node -r dotenv/config ./node_modules/pm2/bin/pm2 start ./dist/src/server.js --name acheev-api",
    "poststart": "node ./node_modules/pm2/bin/pm2 logs"
  },
  "author": "Waker",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.6.0",
    "@types/validator": "^13.7.0",
    "apollo-server-express": "^3.5.0",
    "aws-sdk": "^2.1046.0",
    "bcryptjs": "^2.4.3",
    "body-parser-graphql": "^1.1.0",
    "compression": "^1.7.4",
    "csv-parser": "^3.0.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.1",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^6.1.13",
    "graphql-shield": "^7.5.0",
    "graphql-tools": "^8.2.0",
    "graphql-type-json": "^0.3.2",
    "knex": "^0.95.14",
    "libphonenumber-js": "^1.9.44",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "node-cron": "^3.0.0",
    "node-html-parser": "^5.1.0",
    "objection": "^3.0.0",
    "pg": "^8.7.1",
    "pm2": "^4.4.0",
    "twilio": "^5.0.4",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/graphql-type-json": "^0.3.2",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.0",
    "@types/node-cron": "^3.0.0",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "nodemon": "^2.0.2",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.6.0",
    "typescript": "4.5.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "build",
      "public",
      "db"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start-dev",
    "ext": "ts"
  }
}
